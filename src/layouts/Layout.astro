---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Atlanta's Premier Fencing Company - Professional fence installation and repair services for residential and commercial properties" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="fixed w-full bg-white/90 backdrop-blur-sm z-50 shadow-sm">
			<nav class="max-w-7xl mx-auto px-4 h-16 flex items-center justify-between">
				<a href="/" class="text-2xl font-bold text-orange-500">Fence in Atlanta</a>
				<div class="space-x-6">
					<a href="/residential" class="hover:text-orange-500 transition-colors">Residential</a>
					<a href="/commercial" class="hover:text-orange-500 transition-colors">Commercial</a>
					<a href="/repair" class="hover:text-orange-500 transition-colors">Repair</a>
					<a href="/gates" class="hover:text-orange-500 transition-colors">Gates</a>
					<a href="/blog" class="hover:text-orange-500 transition-colors">Blog</a>
					<a href="#quote" class="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-lg transition-colors">
						Get Estimate
					</a>
				</div>
			</nav>
		</header>
		<slot />
		<footer class="bg-gray-800 text-white py-12">
			<div class="max-w-7xl mx-auto px-4">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div>
						<h3 class="text-xl font-bold mb-4">Atlanta Fencing</h3>
						<p>Professional fence installation and repair services in the greater Atlanta area.</p>
					</div>
					<div>
						<h3 class="text-xl font-bold mb-4">Contact</h3>
						<p>📞 (404) 555-0123</p>
						<p>📧 info@atlantafencing.com</p>
						<p>📍 Atlanta, GA</p>
					</div>
					<div>
						<h3 class="text-xl font-bold mb-4">Service Areas</h3>
						<p>Buckhead, Midtown, Decatur, Sandy Springs, Marietta, and surrounding areas</p>
					</div>
				</div>
				<div class="mt-8 pt-8 border-t border-gray-700 text-center">
					<p>&copy; {new Date().getFullYear()} Atlanta Fencing. All rights reserved.</p>
				</div>
			</div>
		</footer>
	</body>
</html>